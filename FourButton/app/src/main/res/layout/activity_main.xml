<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnNate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnNateString"
        android:background="@android:color/darker_gray"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnEmergencyCall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnEmergencyCallString"
        android:background="#00FF0A"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnOpenGal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnOpenGalString"
        android:background="#FF0000"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnCloseString"
        android:background="#FFE500"
        android:textColor="@color/black"/>

</LinearLayout>